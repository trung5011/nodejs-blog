header
	.header-top
		.container
			.row
				.col-lg-6.col-md-6.col-sm-6.col-6.header-top-left.no-padding
					ul
						li
							a(href=(settings!=undefined&&settings!='')?settings.linkSocial.facebook:'')
								i.fa.fa-facebook
						li
							a(href=(settings!=undefined&&settings!='')?settings.linkSocial.twitter:'')
								i.fa.fa-twitter
						li
							a(href=(settings!=undefined&&settings!='')?settings.linkSocial.google:'')
								i.fa.fa-google
						li
							a(href=(settings!=undefined&&settings!='')?settings.linkSocial.google:'')
								i.fa.fa-skype
				.col-lg-6.col-md-6.col-sm-6.col-6.header-top-right.no-padding
					ul
						li
							a(href='tel:+440 012 3654 896')
								span.lnr.lnr-phone-handset
								span=settings.sdt
						li
							a(href='mailto:support@colorlib.com')
								span.lnr.lnr-envelope
								span=settings.email
	.logo-wrap
		.container
			.row.justify-content-between.align-items-center
				.col-lg-4.col-md-4.col-sm-12.logo-left.no-padding
					a(href='/')
						img.img-fluid(src=linkUploadArticle+settings.logo, alt='')
				.col-lg-8.col-md-8.col-sm-12.logo-right.no-padding
					img.img-fluid(src=linkFolder+'img/banner-ad.jpg', alt='')
	#main-menu.main-menu
		.container
			.row.align-items-center.justify-content-between
				nav#nav-menu-container
					ul.nav-menu
						each item in itemsCategorys
							li
								a(href='/'+item.slug)=item.name
								-if( Array.isArray(item.children.length) || item.children.length)
									ul
										each child in item.children
												li
													a(href=linkCategorys+child.slug)=child.name
				// #nav-menu-container
				.navbar-right
					form.Search
						input#Search-box.form-control.Search-box(type='text', name='Search-box', placeholder='Search')
						label.Search-box-label(for='Search-box')
							span.lnr.lnr-magnifier
						span.Search-close
							span.lnr.lnr-cross
