	.logo-wrap
		.container
			.row.justify-content-between.align-items-center
				.col-lg-4.col-md-4.col-sm-12.logo-left.no-padding
					a(href='/')
						img.img-fluid(src=linkFolder+'img/logo.png', alt='')
				.col-lg-8.col-md-8.col-sm-12.logo-right.no-padding
					img.img-fluid(src=linkFolder+'img/banner-ad.jpg', alt='')
	#main-menu.main-menu
		.container
			.row.align-items-center.justify-content-between
				nav#nav-menu-container
					ul.nav-menu
						li.menu-active
							a(href='/') Home
						li.menu-has-children
							a(href=linkCategorys) Category
							ul
								each item in itemsCategorys
									li
										a(href=linkCategorys+item.slug)=item.name
						li
							a(href='') About
						li
							a(href='') Contact
				// #nav-menu-container
				.navbar-right
					form.Search
						input#Search-box.form-control.Search-box(type='text', name='Search-box', placeholder='Search')
						label.Search-box-label(for='Search-box')
							span.lnr.lnr-magnifier
						span.Search-close
							span.lnr.lnr-cross
